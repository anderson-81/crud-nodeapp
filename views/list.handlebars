<div class="row">
   <div class="col-md-8 mx-auto d-block margin-top-3">
      <div class="form-group">
         <h2 class="display-4">List</h2>
      </div>
      <div class="form-group">
         <hr>
      </div>
      <div class="form-group">
         <label for="search">Search</label>
         <form action="/people" method="POST" class="form-inline">
            <input type="hidden" id="hash" name="hash" value="{{hash}}">
            <input type="text" name="search" id="search" class="form-control col-md-5">
            <button class="btn btn-info col-md-2 float-right">Search</button>
         </form>
      </div>
      <div class="form-group">
         <table class="table table-striped" id="tbpeople">
            <thead>
               <tr>
                  <th>Name</th>
                  <th>E-mail</th>
                  <th class="text-center">Birthday</th>
                  <th class="text-center">Select</th>
               </tr>
            </thead>
            <tbody>
               {{#each people as |person|}}
               <tr>
                  <td>{{ person.name }}</td>
                  <td>{{ person.email }}</td>
                  <td class="text-center">{{ moment person.birthday "MM/DD/YYYY" }}</td>
                  <td class="text-center"><a href="/people/edit/{{ person.id }}"><img src="assets/imgs/select.png" class="img-edit img-fluid"></a></td>
               </tr>
               {{/each}}
            </tbody>
         </table>
      </div>
      <div class="form-group">
         <hr>
      </div>
      <div class="form-group">
         <a href="/people/new" class="btn btn-success col-md-2 float-right">Create</a>
      </div>
   </div>
</div>

<script src="/assets/js/list.js"></script>